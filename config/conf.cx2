F90 = mpiifort
# add -DLIBXC for LIBXC support
FFLAGS = -DFFTW3 -DMPI -DSCALAPACK -vec-report0
MATHLIBS = -Bdynamic -L$(MKL_HOME)/lib/64 -lmkl -lguide
SCALAPACKLIBS = -lmkl_scalapack_lp64 -lmkl_blacs_lp64

# uncomment next line and add $(LIBXCLIBS) to the LIBS line to add LIBXC
#LIBXCLIBS = -Bstatic -L/home/nhine/libxc-1.0/src/.libs -lxc -Bdynamic
LIBS = $(MATHLIBS) $(SCALAPACKLIBS) $(MPILIBS)

OPTFLAGS = -O2
DEBUGFLAGS = -g -debug -check all -traceback -warn all -DTRACE -DDEBUG_ARRAYS
